<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#3A3A3A"
    android:screenOrientation="landscape"
    tools:context=".Partido.PartidoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4CAF50"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_weight="3"
            android:background="#3A3A3A"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTiemposMLocal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tiempos: 2"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtFaltasLocal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Faltas: 0"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Local"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtPuntosLocal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF3D00"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCuartoPartido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cuarto 1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <Chronometer
                    android:id="@+id/TiempoCuarto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>


            <!--<TextView
                android:id="@+id/txtTiempo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:gravity="center"
                android:text="10:00"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/txtPuntosVisitante"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00B0FF"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Visitante"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtFaltasVisitante"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Faltas: 0"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtTiemposMVisitante"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tiempos: 2"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/TBLocal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonlocaldesactivado"
                    android:text="ToggleButton"
                    android:textOff="1"
                    android:textOn="1" />

                <ToggleButton
                    android:id="@+id/TBLocal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonlocaldesactivado"
                    android:text="ToggleButton"
                    android:textOff="2"
                    android:textOn="2" />

                <ToggleButton
                    android:id="@+id/TBLocal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonlocaldesactivado"
                    android:text="ToggleButton"
                    android:textOff="3"
                    android:textOn="3" />

                <ToggleButton
                    android:id="@+id/TBLocal4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonlocaldesactivado"
                    android:text="ToggleButton"
                    android:textOff="4"
                    android:textOn="4" />

                <ToggleButton
                    android:id="@+id/TBLocal5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonlocaldesactivado"
                    android:text="ToggleButton"
                    android:textOff="5"
                    android:textOn="5" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/pista_baloncesto_partido" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/TBVisitante1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonvisitantedesactivado"
                    android:text="ToggleButton"
                    android:textOff="1"
                    android:textOn="1" />

                <ToggleButton
                    android:id="@+id/TBVisitante2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonvisitantedesactivado"
                    android:text="ToggleButton"
                    android:textOff="2"
                    android:textOn="2" />

                <ToggleButton
                    android:id="@+id/TBVisitante3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonvisitantedesactivado"
                    android:text="ToggleButton"
                    android:textOff="3"
                    android:textOn="3" />

                <ToggleButton
                    android:id="@+id/TBVisitante4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonvisitantedesactivado"
                    android:text="ToggleButton"
                    android:textOff="4"
                    android:textOn="4" />

                <ToggleButton
                    android:id="@+id/TBVisitante5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/togglebuttonvisitantedesactivado"
                    android:text="ToggleButton"
                    android:textOff="5"
                    android:textOn="5" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFalta"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#3A3A3A"
                android:text="Fal"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnAsistencia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#3A3A3A"
                android:text="Asi"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnTL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#3A3A3A"
                android:text="TL"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnT2p"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#3A3A3A"
                android:text="T2p"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnT3p"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#3A3A3A"
                android:text="T3p"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnPerdida"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#3A3A3A"
                android:text="Pér"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnRecuperacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#3A3A3A"
                android:text="Rec"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnTapon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#3A3A3A"
                android:text="Tap"
                android:textSize="12sp"
                app:cornerRadius="10sp" />

            <Button
                android:id="@+id/btnRebote"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#3A3A3A"
                android:text="Reb"
                android:textSize="12sp"
                app:cornerRadius="10sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>